  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <script>
    AOS.init({duration:900});

    // Simple hash-based single-file routing
    const pages = Array.from(document.querySelectorAll('section.page'));
    function showPage(hash){
      const id = (hash || '#home').replace('#','');
      pages.forEach(s=> s.classList.toggle('active', s.id===id));
      // scroll to top of main content for better UX
      window.scrollTo({top:0,behavior:'smooth'});
    }
    // initial
    showPage(location.hash || '#home');
    window.addEventListener('hashchange', ()=> showPage(location.hash));

    // enable keyboard navigation (left/right)
    const order = ['home','products','style','about','contact'];
    window.addEventListener('keydown', e=>{
      if(['ArrowLeft','ArrowRight'].includes(e.key)){
        const idx = order.indexOf(location.hash.replace('#','')||'home');
        const next = e.key==='ArrowRight' ? idx+1 : idx-1;
        const wrap = (n)=> (n+order.length)%order.length;
        location.hash = '#'+order[wrap(next)];
      }
    });
  </script>
